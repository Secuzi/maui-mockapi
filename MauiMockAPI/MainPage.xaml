<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiMockAPI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MauiMockAPI.Models">

    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Button Command="{Binding GetAllUserCommand}" Text="Show users" />
                <Entry Placeholder="Ex: 1" Text="{Binding UserId}" />
                <Button
                    Command="{Binding GetSingleUser}"
                    CommandParameter="{Binding UserId}"
                    Text="Show user" />

            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="{Binding User.Name}" />
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding Users}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:UserModel">
                        <VerticalStackLayout>
                            <Label Text="{Binding UserId}" />
                            <Label Text="{Binding Name}" />
                        </VerticalStackLayout>
                    </DataTemplate>

                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
